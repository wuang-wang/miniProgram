@import './styles/iconfont.wxss';

/* 微信小程序不支持通配符 ‘*’ */
page,view,text,swiper,swiper-item,image,navigator {
  margin: 0;
  padding: 0;
  /* 这可令浏览器呈现出带有指定宽度和高度的框，并把边框和内边距放入框中 */
  box-sizing: border-box;
}

page {
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 定义字体大小 */
  font-size: 28rpx;
}

image {
  width: 100%;
}